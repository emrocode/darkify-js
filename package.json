{
  "name": "darkify-js",
  "version": "1.1.10",
  "description": "A simple dark mode toggle library",
  "type": "module",
  "main": "dist/darkify.umd.js",
  "module": "dist/darkify.esm.js",
  "types": "dist/darkify.d.ts",
  "files": [
    "dist/darkify.d.ts",
    "dist/darkify.umd.js",
    "dist/darkify.esm.js"
  ],
  "scripts": {
    "_cls": "rm -rf dist",
    "_bundle": "rollup -c rollup.config.ts --configPlugin typescript",
    "build": "npm run _cls && npm run _bundle",
    "format": "prettier --write src/",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emrocode/darkify-js"
  },
  "keywords": [
    "dark mode",
    "light mode",
    "theme toggle",
    "dark theme",
    "color scheme",
    "theme switcher",
    "night mode",
    "automatic theme"
  ],
  "author": "Emilio Romero <emrocode@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "prettier": "^3.6.2",
    "rollup": "^4.50.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-dts": "^6.2.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  }
}
