{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2022",
    "strict": true,
    "allowJs": true,
    "removeComments": false,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ES2022", "DOM"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
}
